<head>
    <link rel="stylesheet" href="/stylesheets/admin/autho-verify.css">
    <link rel="stylesheet" href="/stylesheets/admin/autho-verify1.css">
</head>
<div class="nav">
    <a href="/admin/home">
        <div class="back">
            <img src="/icons/back-button.png" alt="logout" class="back-icon">
        </div>
    </a>
    <div>
        <img src="/images/SafeNet Logo no bg.png"alt="logo" class="logo">
    </div>
</div>
<div class="main">
    <h1 class="title">Volunteer Verification</h1>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>phone_number</th>
            <th>office address</th>
            <th>designation</th>
            <th>department</th>
            <th>employee id</th>
            <th>id proof</th>
            <th>photo</th>
            <th></th>

        </tr>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone_number}}</td>
                <td>{{this.office_address}}</td>
                <td>{{this.designation}}</td>
                <td>{{this.department}}</td>
                <td>{{this.employee_id}}</td>
                <td>
                    <a href="{{id_proof}}" target="_blank">
                        <img src="{{id_proof}}" alt="ID Proof" style="width: 100px; height: auto;">
                    </a>
                </td>
                <td>
                    <a href="{{photo}}" target="_blank">
                        <img src="{{photo}}" alt="Photo" style="width: 100px; height: auto;">
                    </a>
                </td>
                <td>
                    <button class="approve-btn">Approve</button>
                    <button class="reject-btn">Reject</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>