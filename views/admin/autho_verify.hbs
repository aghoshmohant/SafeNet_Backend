<div class="main">
    <h1 class="title">Volunteer Verification</h1>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>phone_number</th>
            <th>office address</th>
            <th>designation</th>
            <th>department</th>
            <th>employee id</th>
            <th>id proof</th>
            <th>photo</th>
            <th></th>

        </tr>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone_number}}</td>
                <td>{{this.office_address}}</td>
                <td>{{this.designation}}</td>
                <td>{{this.department}}</td>
                <td>{{this.employee_id}}</td>
         <td>
          <button onclick="showImageModal('{{id_proof}}')">View ID Proof</button>
        </td>
        <td>
          <button onclick="showImageModal('{{photo}}')">View Photo</button>
        </td>
        <td>
                    <button class="approve-btn">Approve</button>
                    <button class="reject-btn">Reject</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
<!-- Modal Structure -->
<div id="imageModal" class="modal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeModal()">&times;</span>
    <img id="modalImage" src="" alt="Image Preview" style="max-width: 100%; max-height: 100%;">
  </div>
</div>

<style>
  /* Modal styling */
  .modal {
    display: none; /* Hidden by default */
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5); /* Black with opacity */
  }

  .modal-content {
    position: relative;
    margin: auto;
    padding: 20px;
    width: 80%;
    max-width: 600px;
    background: white;
    border-radius: 8px;
    text-align: center;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 24px;
    font-weight: bold;
    color: #333;
    cursor: pointer;
  }

  .close-btn:hover {
    color: red;
  }
</style>

<script>
  // Function to show the modal
  function showImageModal(imagePath) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = `/uploads/${imagePath}`; // Adjust the path based on your server's setup
    modal.style.display = 'block';
  }

  // Function to close the modal
  function closeModal() {
    const modal = document.getElementById('imageModal');
    modal.style.display = 'none';
  }

  // Close modal when clicking outside of it
  window.onclick = function (event) {
    const modal = document.getElementById('imageModal');
    if (event.target === modal) {
      modal.style.display = 'none';
    }
  };
</script>